generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model UserSettings {
  userId   String @id
  currency String
}

model Category {
  createAt DateTime @default(now())
  name     String
  userId   String
  icon     String
  type     String   @default("renda")

  @@unique([name, userId, type])
}

model Transaction {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updateAt  DateTime @default(now())

  amount      Float
  description String
  date        DateTime
  userId      String
  type        String   @default("renda")

  category     String
  categoryIcon String
}

model MonthHistory {
  userId  String
  day     Int
  month   Int
  year    Int
  income  Float
  expense Float

  //não existirá mais de um registro com a mesma combinação
  @@id([day, month, year, userId]) //prevenir duplicação de registros mensais para o mesmo usuário
}

model YearHistory {
  userId  String
  month   Int
  year    Int
  income  Float
  expense Float

  //não existirá mais de um registro com a mesma combinação
  @@id([month, year, userId]) //prevenir duplicação de registros anuais para o mesmo usuário
}
